apiVersion: v1
kind: Secret
metadata:
  name: nginx-htpasswd
  namespace: cowrite
type: Opaque
stringData:
  .htpasswd: |
    # Generate this using: htpasswd -nb username password
    # Example: htpasswd -nb admin yourpassword
    # On Windows PowerShell: docker run --rm httpd:alpine htpasswd -nb admin yourpassword
    # Replace the line below with your generated htpasswd entry
    admin:$apr1$xyz$abc123
